{# src/Blogger/BlogBundle/Resources/views/Page/contact.html.twig #}
{% extends 'layout.html.twig' %}
{% block title %}{% trans %}blog.contact{% endtrans %}{% endblock%}

{% block body %}
    <header>
        <h1>{% trans %}blog.contact{% endtrans %} symblog</h1>
    </header>


    {% for flashMessage in app.session.flashbag.get('blogger-notice') %}
        <div class="blogger-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}


    <p>{% trans %}blog.contact.title{% endtrans %}</p>

    {{ form_start(form) }}

    {{ form_errors(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.subject) }}
    {{ form_row(form.body) }}

    <div class="g-recaptcha" data-sitekey= {{ recaptcha_sitekey }}></div>

    <input type="submit" value="Submit" />

    {{ form_end(form) }}

{% endblock %}